<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main_after"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_green1"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".AfterDriveFragment" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:scaleType="fitCenter"
            android:src="@drawable/cruise_logo" />

        <TextView
            android:id="@+id/tv_logo_after"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/app_name_caps"
            android:textColor="@color/white"
            android:textSize="@dimen/font_logo" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/tv_drive_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drive_completed"
                android:textColor="@color/white"
                android:textSize="@dimen/font_large" />

            <ImageView
                android:id="@+id/iv_stars"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_below="@id/tv_drive_completed"
                android:layout_marginRight="5sp"
                android:scaleType="fitXY"
                android:src="@drawable/starfilled" />

            <TextView
                android:id="@+id/tv_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_stars"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@id/iv_stars"
                android:text="@string/stars_ex"
                android:textColor="@color/white"
                android:textSize="@dimen/font_large" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/bar1_after"
                android:layout_width="140dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginRight="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar2_after"
                android:layout_width="120dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginRight="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar3_after"
                android:layout_width="100dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginRight="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar4_after"
                android:layout_width="80dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginRight="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar5_after"
                android:layout_width="60dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginRight="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar6_after"
                android:layout_width="80dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginRight="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar7_after"
                android:layout_width="100dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginRight="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar8_after"
                android:layout_width="120dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginRight="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar9_after"
                android:layout_width="140dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginRight="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_charge_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/good_charge"
            android:textSize="@dimen/font_medium"
            android:gravity="center"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>