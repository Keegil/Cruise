<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".DriveActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:scaleType="fitCenter"
            android:src="@drawable/cruise_logo" />

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/app_name_caps"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp" >

                <TextView
                    android:id="@+id/endofdrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_starting_range"
                    android:layout_marginLeft="3sp"
                    android:layout_toRightOf="@id/tv_starting_range"
                    android:text="@string/endofdrive"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:gravity="center|right"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/bar1"
                android:layout_width="120dp"
                android:layout_height="17dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar2"
                android:layout_width="100dp"
                android:layout_height="17dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar3"
                android:layout_width="80dp"
                android:layout_height="17dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar4"
                android:layout_width="60dp"
                android:layout_height="17dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar5"
                android:layout_width="40dp"
                android:layout_height="17dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar6"
                android:layout_width="60dp"
                android:layout_height="17dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar7"
                android:layout_width="80dp"
                android:layout_height="17dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar8"
                android:layout_width="100dp"
                android:layout_height="17dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar9"
                android:layout_width="120dp"
                android:layout_height="17dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/goodamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/goodamount"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>