<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_green1"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".SummaryFragment" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:scaleType="fitCenter"
            android:src="@drawable/cruise_logo" />

        <TextView
            android:id="@+id/tv_logo_summary"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/app_name_caps"
            android:textColor="@color/white"
            android:textSize="@dimen/font_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_car"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ev" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_scores"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_comp_score"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:text="@string/comp_score_ex"
                android:textColor="@color/white"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/tv_comp_percent"
                android:layout_width="35sp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_comp_score"
                android:layout_marginBottom="6sp"
                android:layout_toRightOf="@id/tv_comp_score"
                android:text="@string/percent"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/tv_comp_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_comp_score"
                android:layout_marginTop="-18sp"
                android:text="@string/comp_score_desc"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="17dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_money_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money_score_ex"
                android:textColor="@color/white"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/tv_money_kr"
                android:layout_width="35sp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_money_score"
                android:layout_marginBottom="6sp"
                android:layout_toRightOf="@id/tv_money_score"
                android:text="@string/kr"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/tv_money_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_money_score"
                android:layout_marginTop="-18sp"
                android:text="@string/money_score_desc"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_eff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_eff_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eff_score_ex"
                android:textColor="@color/white"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/tv_eff_percent"
                android:layout_width="35sp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_eff_score"
                android:layout_marginBottom="6sp"
                android:layout_toRightOf="@id/tv_eff_score"
                android:text="@string/out_of_20_2"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/tv_eff_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_eff_score"
                android:layout_marginTop="-18sp"
                android:text="@string/eff_score_desc"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <TextView
            android:id="@+id/tv_eval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/eval_strong"
            android:textColor="@color/white"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp" >

        <TextView
            android:id="@+id/tv_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-18sp"
            android:gravity="center"
            android:text="@string/continue_desc"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

</LinearLayout>