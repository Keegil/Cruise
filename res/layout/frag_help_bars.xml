<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_help_bars"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_green1"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".HelpFragmentBars" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:scaleType="fitCenter"
            android:src="@drawable/cruise_logo" />

        <TextView
            android:id="@+id/tv_logo_help_bars"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="@string/app_name_caps"
            android:textColor="@color/white"
            android:textSize="@dimen/font_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <LinearLayout
            android:id="@+id/ll_bars_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/img_distance"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/bar1_help"
                android:layout_width="60dp"
                android:layout_height="@dimen/bar_low_height"
                android:layout_marginBottom="@dimen/bar_low_spacing"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar2_help"
                android:layout_width="80dp"
                android:layout_height="@dimen/bar_low_height"
                android:layout_marginBottom="@dimen/bar_low_spacing"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar3_help"
                android:layout_width="100dp"
                android:layout_height="@dimen/bar_low_height"
                android:layout_marginBottom="@dimen/bar_low_spacing"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar4_help"
                android:layout_width="120dp"
                android:layout_height="@dimen/bar_low_height"
                android:layout_marginBottom="@dimen/bar_low_spacing"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar5_help"
                android:layout_width="140dp"
                android:layout_height="@dimen/bar_low_height"
                android:layout_marginBottom="@dimen/bar_low_spacing"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar6_help"
                android:layout_width="120dp"
                android:layout_height="@dimen/bar_low_height"
                android:layout_marginBottom="@dimen/bar_low_spacing"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar7_help"
                android:layout_width="100dp"
                android:layout_height="@dimen/bar_low_height"
                android:layout_marginBottom="@dimen/bar_low_spacing"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar8_help"
                android:layout_width="80dp"
                android:layout_height="@dimen/bar_low_height"
                android:layout_marginBottom="@dimen/bar_low_spacing"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar9_help"
                android:layout_width="60dp"
                android:layout_height="@dimen/bar_low_height"
                android:background="@drawable/whitebar" >
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_bars_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_distance"
            android:gravity="center"
            android:text="@string/bars_desc"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/tv_bars_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/bars_info"
            android:textColor="@color/white"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" >
    </LinearLayout>

</LinearLayout>