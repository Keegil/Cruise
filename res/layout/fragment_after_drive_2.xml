<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main_after2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradgreenyellow"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".AfterDriveFragment2" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/bar1_after2"
                android:layout_width="60dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginLeft="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar2_after2"
                android:layout_width="80dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginLeft="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar3_after2"
                android:layout_width="100dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginLeft="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar4_after2"
                android:layout_width="120dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginLeft="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar5_after2"
                android:layout_width="140dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginLeft="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar6_after2"
                android:layout_width="120dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginLeft="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar7_after2"
                android:layout_width="100dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginLeft="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar8_after2"
                android:layout_width="80dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginBottom="@dimen/bar_spacing"
                android:layout_marginLeft="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bar9_after2"
                android:layout_width="60dp"
                android:layout_height="@dimen/bar_height"
                android:layout_marginLeft="-4dp"
                android:background="@drawable/whitebar" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="15dp"
            android:gravity="center|right"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_ending_range"
                    android:layout_width="wrap_content"
                    android:layout_height="90sp"
                    android:text="@string/example_km"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_larger" />

                <TextView
                    android:id="@+id/tv_km_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_ending_range"
                    android:layout_marginLeft="3sp"
                    android:layout_toRightOf="@id/tv_ending_range"
                    android:text="@string/km"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:id="@+id/tv_est_range_remain_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_ending_range"
                    android:text="@string/est_range_remain"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/iv_speed"
                    android:layout_width="55sp"
                    android:layout_height="35sp"
                    android:layout_marginRight="10sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/speed_icon" />

                <ImageView
                    android:id="@+id/iv_speed_star1"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_speed"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_speed_star2"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_speed_star1"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_speed_star3"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_speed_star2"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_speed_star4"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_speed_star3"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_speed_star5"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_speed_star4"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <TextView
                    android:id="@+id/tv_speed_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_speed"
                    android:layout_marginTop="10sp"
                    android:layout_toRightOf="@id/iv_speed"
                    android:text="@string/speed_desc"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/iv_acc"
                    android:layout_width="55sp"
                    android:layout_height="35sp"
                    android:layout_marginRight="10sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/acc_icon" />

                <ImageView
                    android:id="@+id/iv_acc_star1"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_acc"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_acc_star2"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_acc_star1"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_acc_star3"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_acc_star2"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_acc_star4"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_acc_star3"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_acc_star5"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_acc_star4"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <TextView
                    android:id="@+id/tv_acc_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_acc"
                    android:layout_marginTop="10sp"
                    android:layout_toRightOf="@id/iv_acc"
                    android:text="@string/acc_desc"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/iv_route"
                    android:layout_width="55sp"
                    android:layout_height="35sp"
                    android:layout_marginRight="10sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/route_icon" />

                <ImageView
                    android:id="@+id/iv_route_star1"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_route"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_route_star2"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_route_star1"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_route_star3"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_route_star2"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_route_star4"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_route_star3"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_route_star5"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_route_star4"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <TextView
                    android:id="@+id/tv_route_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_route"
                    android:layout_marginTop="10sp"
                    android:layout_toRightOf="@id/iv_route"
                    android:text="@string/route_desc"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <ImageView
                    android:id="@+id/iv_brake"
                    android:layout_width="55sp"
                    android:layout_height="35sp"
                    android:layout_marginRight="10sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/brake_icon" />

                <ImageView
                    android:id="@+id/iv_brake_star1"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_brake"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_brake_star2"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_brake_star1"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_brake_star3"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_brake_star2"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_brake_star4"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_brake_star3"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <ImageView
                    android:id="@+id/iv_brake_star5"
                    android:layout_width="@dimen/star_size"
                    android:layout_height="@dimen/star_size"
                    android:layout_toRightOf="@id/iv_brake_star4"
                    android:scaleType="fitXY"
                    android:src="@drawable/starfilled" />

                <TextView
                    android:id="@+id/tv_brake_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_brake"
                    android:layout_marginTop="10sp"
                    android:layout_toRightOf="@id/iv_brake"
                    android:text="@string/brake_desc"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/bottom_section_margin"
        android:layout_marginRight="@dimen/bottom_section_margin"
        android:layout_weight="0.2"
        android:gravity="center"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_start_range_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/start_range_desc"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/tv_range_decrease_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/range_decrease_desc"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />
            
            <TextView
                android:id="@+id/tv_distance_traveled_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/distance_traveled_desc"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_start_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/start_range_ex"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/tv_range_decrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/range_decrease_ex"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />
            
            <TextView
                android:id="@+id/tv_distance_traveled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/distance_traveled_ex"
                android:textColor="@color/white"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>